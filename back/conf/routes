# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /example                    controllers.ExampleController.index
POST    /example/form               controllers.ExampleController.update

GET     /api/snapshot               controllers.SnapshotController.list
POST    /api/snapshot               controllers.SnapshotController.create
DELETE  /api/snapshot/:id           controllers.SnapshotController.delete(id: Int)

GET     /manage-repo/initialize     controllers.GitRepoController.initialize
GET     /manage-repo/update         controllers.GitRepoController.update

GET     /repo/                      controllers.GitRepoController.retrieveFileByPath(file = "")
GET     /repo/*file                 controllers.GitRepoController.retrieveFileByPath(file)
GET     /api/metrics/all/*file      controllers.FileMetricsController.listAll(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET	/directory		    controllers.DirectoryController.directory(filename = "")
GET 	/directory/		    controllers.DirectoryController.directory(filename = "")
GET 	/directory/$filename<.+>	    controllers.DirectoryController.directory(filename : String)

GET 	/file			    controllers.Application.file

